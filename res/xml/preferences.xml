    </PreferenceCategory>
      <PreferenceCategory
            android:title="@string/preferences_performance">
            <CheckBoxPreference
                android:key="disable_player_sorting"
                android:title="@string/preferences_performance_player_sorting"
                android:summary="@string/preferences_performance_player_sorting_sumarry" 
                android:defaultValue="false"/>
            <CheckBoxPreference
                android:key="draw_visibility_range"
                android:title="@string/preferences_performance_draw_visibility_range"
                android:summary="@string/preferences_performance_draw_visibility_range_sumarry" 
                android:defaultValue="true"/>
            <CheckBoxPreference
                android:key="change_move_images"
                android:title="@string/preferences_performance_change_move_images"
                android:summary="@string/preferences_performance_change_move_images_sumarry" 
                android:defaultValue="true"/>
            <CheckBoxPreference
                android:key="jumpy_moves"
                android:title="@string/preferences_performance_jumpy_moves"
                android:summary="@string/preferences_performance_jumpy_moves_sumarry" 
                android:defaultValue="false"/>
                <CheckBoxPreference
                android:key="full_invalidate"
                android:title="@string/preferences_performance_full_invalidate"
                android:summary="@string/preferences_performance_full_invalidate_sumarry" 
                android:defaultValue="true"/>
                
                
      </PreferenceCategory>
                
   
    
</PreferenceScreen>
